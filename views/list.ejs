<%- include("header") -%>





<div class="box" id="heading">
    <h1><%=title %> </h1>
</div>

<div class="box" id="">


    <% newlistItems.forEach(function(item){ %>

    <form action="/delete" method="post">
        <div class="item">

            <input type="checkbox" name="checkbox" value="<%=item._id%>" id="" onChange="this.form.submit()">
            <p> <%= item.name %> </p>

        </div>

        <input type="hidden"  name="listName" value="<%=title%>">

    </form>


    <% }); %>

    <form action="/" method="post" class="item">
        <input type="text" name="newItem" placeholder="New Item">
        <button type="submit" name="button" value=<%=title%>>+</button>
      
    </form>



</div>


